{
    "name": "tmarois/laravel-code-truncator",
    "description": "A Laravel command to truncate your codebase to fit within AI token limits.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Timothy Marois",
            "email": "timothymarois@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "Tmarois\\LaravelCodeTruncator\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tmarois\\LaravelCodeTruncator\\CodeTruncatorServiceProvider"
            ]
        }
    },
    "require-dev": {
        "orchestra/testbench": "^9.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tmarois\\LaravelCodeTruncator\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
